datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  passwordHash String
  courses      Course[]  // tous les cours créés par cet utilisateur
  lessons      Lesson[]  // toutes les leçons créées par cet utilisateur
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Course {
  id           Int       @id @default(autoincrement())
  user         User      @relation(fields: [userId], references: [id])
  userId       Int
  title        String
  description  String
  level        String
  technologies String[]   
  slug         String     @unique
  duration     String
  lessons      Lesson[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Lesson {
  id           Int       @id @default(autoincrement())
  course       Course    @relation(fields: [courseId], references: [id])
  courseId     Int
  user         User      @relation(fields: [userId], references: [id]) // propriétaire
  userId       Int
  title        String
  description  String
  duration     String
  slug         String
  content      String
  exercise     Exercise?
  quizzes      Quiz[]

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Exercise {
  id           String   @id @default(cuid())
  lesson       Lesson   @relation(fields: [lessonId], references: [id])
  lessonId     Int      @unique
  title        String   @default("Titre temporaire")
  prompt       String   @default("Prompt temporaire")
  solution     String   @default("Solution temporaire")
  validateCode String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Quiz {
  id            Int       @id @default(autoincrement())
  lesson        Lesson    @relation(fields: [lessonId], references: [id])
  lessonId      Int
  question      String?   
  options       String[]  
  correctAnswer Int?     

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
